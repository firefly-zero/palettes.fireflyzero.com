    // https://lospec.com/palette-list/{{ p.slug }}
    {%- for c in colors %}
    ff.setColor(@enumFromInt({{c.index}}), ff.RGB{.r = 0x{{c.r_hex}}, .g = 0x{{c.g_hex}}, .b = 0x{{c.b_hex}}});
    {%- endfor %}
}
